~/bin/bwa index $1 >null 2>&1
~/bin/bwa aln $1 $2 -t $5 -n $6 -k $6 >read1.sai 2>null
~/bin/bwa aln $1 $3 -t $5 -n $6 -k $6  >read2.sai 2>null
~/bin/bwa sampe $1 read1.sai read2.sai $2 $3 >$4.sam 2>null

./cleanSoftAndUnmapped.py $4.sam

samtools view -bS $4.sam_cleaned.sam > $4.bam 2>null
samtools sort -o $4_sorted.bam $4.bam >null 2>&1
samtools index $4_sorted.bam >null 2>&1

